<?xml version="1.0"?>
<robot name="rover">

  <!-- Material definition for grey -->
  <material name="grey">
    <color rgba="0.5 0.5 0.5 1.0"/>
  </material>

  <!-- Link definition for the rover body -->
  <link name="base_link">
    <visual>
      <geometry>
        <!-- Define the shape of the rover (a box) -->
        <box size="1.15 1.1 1.1"/> <!-- Length x Width x Height -->
      </geometry>
      <material name="grey"/>
    </visual>
    <collision>
      <geometry>
        <box size="1.15 1.1 1.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="50.0"/> <!-- Adjust mass based on your rover's actual weight -->
      <inertia  ixx="0.5" ixy="0.0" ixz="0.0" iyy="0.5" iyz="0.0" izz="0.5"/>
    </inertial>
  </link>

  <!-- Link definitions for additional components -->
  <link name="laser_frame"/>
  <link name="camera_link"/>
  <link name="camera_depth_frame"/>

  <!-- Joints to link frames to the base_link -->
  <joint name="base_to_laser" type="fixed">
    <parent link="base_link"/>
    <child link="laser_frame"/>
    <origin xyz="0.36 -0.3 0.53" rpy="0 0 0"/>
  </joint>

  <joint name="base_to_camera" type="fixed">
    <parent link="base_link"/>
    <child link="camera_link"/>
    <origin xyz="0.36 -0.3 0.53" rpy="0 0 0"/>
  </joint>

  <joint name="camera_to_depth" type="fixed">
    <parent link="camera_link"/>
    <child link="camera_depth_frame"/>
    <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
  </joint>

</robot>
